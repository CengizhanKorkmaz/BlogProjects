@{
    Layout = null;
}
<div class="tech-btm">
    <img src="~/web/images/banner1.jpg" class="card-img-top img-fluid" alt="">
</div>
<div class="tech-btm">
    <p>Teknoloji, yazılım ve diğer bloglar hakkında bildirim almak için abone olun.</p>
    <form  method="post">
        <input type="email" id="txtEmail" placeholder="Mail Adresinizi Giriniz!" name="EMail" required="">
        <input type="submit" id="btnSubmit" name="submit" value="Abone Ol">
        <br />
    </form>
</div>
<script src="https://code.jquery.com/jquery-3.5.1.min.js" type="text/javascript"></script>


<script>  
    $(document).ready(function () {
        $("#btnSubmit").click(function() {
            let values = { Email: $("#txtEmail").val()};
            $.ajax({
                type: "post",
                dataType:"json",
                url: "/NewsLetter/SubscribeMail/",
                contentType: 'application/json; charset=utf-8',
                data: values,
                success: function(response) {
                    let result = jQuery.parseJSON(response);
                }

            });
        });
        
    });
    
</script>  

