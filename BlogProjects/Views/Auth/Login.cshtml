@model EntityLayer.Concretes.Writer
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Oturum Açın</h3>
        <div class="row inner-sec">
            <div class="login p-5 bg-light mx-auto mw-100">
                <form method="post">
                    <div class="form-group">
                        <label for="exampleInputEmail1 mb-2">Kullanıcı Adı</label>
                        <input type="text" class="form-control" asp-for="@Model.Mail" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="" required="">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1 mb-2">Şifre</label>
                        <input type="password" class="form-control" asp-for="@Model.Password" id="exampleInputPassword1" placeholder="" required="">
                    </div>
                    <button type="submit" class="btn btn-primary submit mb-4">Giriş Yap</button>
                    <p><a href="/Auth/Register/"> Bir Hesabınız Yokmu? Tıklayın.</a></p>
                </form>
            </div>
        </div>
    </div>
</section>