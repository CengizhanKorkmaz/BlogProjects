<div class="container">
    <div class="contact_grid_right">
        <form action="#" method="post">
            <div class="row contact_left_grid">
                <div class="col-md-6 con-left">
                    <div class="form-group">
                        <label for="validationCustom01 my-2">Name</label>
                        <input class="form-control" id="UserName" type="text" name="Name" placeholder="" required="">
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlInput1">Email</label>
                        <input class="form-control" id="Mail" type="email" name="Email" placeholder="" required="">
                    </div>
                    <div class="form-group">
                        <label for="validationCustom03 my-2">Subject</label>
                        <input class="form-control" id="Subject" type="text" name="Subject" placeholder="" required="">
                    </div>
                </div>
                <div class="col-md-6 con-right">
                    <div class="form-group">
                        <label for="textarea">Message</label>
                        <textarea id="Message" placeholder=""></textarea>
                    </div>
                    <input class="form-control" id="btnContact" type="submit" value="Submit">

                </div>
            </div>
        </form>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.5.1.min.js" type="text/javascript"></script>


<script>  
  
        $("#btnContact").click(function() {
            let values = {
                UserName:$("#UserName") .val(),
                Mail: $("#Mail").val(),
                Subject:$("#Subject").val(),
                Message:$("#Message").val()
            };
            $.ajax({
                type: "post",
                url: "/Contact/ContactAdd/",
                data:values,
                success: function(response) {
                    let result = jQuery.parseJSON(response);
                }

            });
        });
        
    
    
</script>  