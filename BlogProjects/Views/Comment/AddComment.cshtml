<div class="comment-top">
    <h4>Yorum Yap</h4>
    <div class="comment-bottom">
        <form method="post">
            <input class="form-control" type="text" id="UserName" name="UserName" placeholder="İsim giriniz" required="">
            <input class="form-control" type="email" id="Email" name="Email" placeholder="Email giriniz" required="">
            <textarea class="form-control" id="Description" name="Description" placeholder="Message..." required=""></textarea>
            <input type="hidden" id="BlogId" value="@ViewBag.Id" />
            <button type="submit" id="btnComment" class="btn btn-primary submit">Yorum Yap</button>
        </form>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.5.1.min.js" type="text/javascript"></script>

<script>

    $("#btnComment").click(function() {
        let values = {
            UserName: $("#UserName").val(),
            Email: $("#Email").val(),
            BlogId: $("#BlogId").val(),
            Description: $("#Description").val()
        }
        $.ajax({
            type: "post",
            url: "/Comment/AddComment/",
            data: values,
            success: function(func) {
                console.log(func);
                let result = jQuery.parseJSON(func);
            }

        });
    });

</script>


