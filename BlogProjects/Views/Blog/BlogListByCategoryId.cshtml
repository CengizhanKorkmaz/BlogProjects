@using EntityLayer.Concretes
@model List<Blog>
@{
    ViewData["Title"] = "BlogListByCategoryId";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-8 left-blog-info-w3layouts-agileits text-left">
    <div class="row mb-4">
        @foreach (var blog in Model)
        {
            <div class="col-md-6 card">
                <a href="/Blog/BlogDetails/@blog.Id">
                    <img src="~/web/images/7.jpg" class="card-img-top img-fluid" alt="">
                </a>
                <div class="card-body">
                    <ul class="blog-icons my-4">
                        <li>
                            <a href="#">
                                <i class="far fa-calendar-alt"></i> @blog.CreatedTime.ToShortDateString()
                            </a>
                        </li>
                        <li class="mx-2">
                            <a href="#">
                                <i class="far fa-user"></i> @blog.Writer.Name
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                <i class="fas fa-eye"></i> @blog.Category.Name
                            </a>
                        </li>

                    </ul>
                    <h5 class="card-title ">
                        <a href="/Blog/BlogDetails/@blog.Id">@blog.Title</a>
                    </h5>
                    <p class="card-text mb-3">@blog.Description.Substring(0, blog.Description.Substring(0, 160).LastIndexOf(" "))...</p>
                    <a href="/Blog/BlogDetails/@blog.Id" class="btn btn-primary read-m">Devamını Oku</a>
                </div>
            </div>
        }

    </div>
    <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-left mt-4">
            <li class="page-item disabled">
                <a class="page-link" href="#" tabindex="-1">Previous</a>
            </li>
            <li class="page-item">
                <a class="page-link" href="#">1</a>
            </li>
            <li class="page-item">
                <a class="page-link" href="#">2</a>
            </li>
            <li class="page-item">
                <a class="page-link" href="#">3</a>
            </li>
            <li class="page-item">
                <a class="page-link" href="#">Next</a>
            </li>
        </ul>
    </nav>
</div>



