<!DOCTYPE html>
<html lang="zxx">
<!--Head-->
<head>
    @await Html.PartialAsync("LayoutPartials/_Head");
</head>
<!--Head-->
<body>
    <!--Header-->
    @await Html.PartialAsync("LayoutPartials/_Header")


    <!--//header-->
    <div class="banner-inner"></div>
    <!--/main-->
    <section class="main-content-w3layouts-agileits">
        <div class="container">
            <h3 class="tittle">Blog Yazıları</h3>
            <div class="row inner-sec">
                @RenderBody()



                @await Html.PartialAsync("LayoutPartials/_RightBody")

            </div>
        </div>
    </section>
    <!--//main-->
    <!--footer-->
    @await Html.PartialAsync("LayoutPartials/_Footer")
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" type="text/javascript"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/web/js/move-top.js"></script>
    <script src="~/web/js/easing.js"></script>
    <script src="~/web/js/bootstrap.js"></script>

    <script>
        jQuery(document).ready(function($) {
            $(".scroll").click(function(event) {
                event.preventDefault();
                $('html,body').animate({
                    scrollTop: $(this.hash).offset().top
                }, 900);
            });
        });
    </script>
    <!--// end-smoth-scrolling -->

    <script>
        $(document).ready(function() {
            /*
                                    var defaults = {
                                          containerID: 'toTop', // fading element id
                                        containerHoverID: 'toTopHover', // fading element hover id
                                        scrollSpeed: 1200,
                                        easingType: 'linear'
                                     };
                                    */

            $().UItoTop({
                easingType: 'easeOutQuart'
            });

        });
    </script>




</body>

</html>
